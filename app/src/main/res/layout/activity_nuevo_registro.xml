<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:title="Nuevo Registro"
            android:titleTextColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="BIENVENIDO"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿En cuántas actividades extracurriculares ha estado a lo largo de su carrera?"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_p1_op1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 a 2 actividades"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p1_op2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 a 3 actividades"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p1_op3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Más de 3" />

                <RadioButton
                    android:id="@+id/rb_p1_op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ninguna" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿Cuál es el principal medio de información para actividades relacionadas a bienestar?"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/rb_p2_op1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p2_op2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voz a voz"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p2_op3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redes sociales"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p2_op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usualmente no me doy cuenta"
                    android:textSize="16dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="De 1 a 5 (Siendo 1 la puntuación más baja y 5 la más alta) ¿Qué tan útil considera el actual registro de asistencia?"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_p3_op1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p3_op2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p3_op3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p3_op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p3_op5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="16dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿Qué actividad que proporciona Bienestar Universitario le gusta más?"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_p4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_p4_op1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PSU"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p4_op2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Culturales"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p4_op3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deportivas"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p4_op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otras"
                    android:textSize="16dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="¿Cuántas camisas de Bienestar reclama al semestre?"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/rg_p5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/rb_p5_op1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p5_op2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 a 3"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p5_op3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Más de 3"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rb_p5_op4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ninguna"
                    android:textSize="16dp" />

            </RadioGroup>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_enviar"
            android:text="ENVIAR" />
    </LinearLayout>
</ScrollView>